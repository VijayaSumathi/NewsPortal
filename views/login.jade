doctype html
html
  head
    style.
      @import url(https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700|Open+Sans:400,300,600);
      * {
      box-sizing: border-box;
      }
      body {
      font-family: 'open sans', helvetica, arial, sans;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      background-color:lightskyblue;
      }
      .log-form {
      width: 40%;
      min-width: 300px;
      max-width: 400px;
      background: #fff;
      position: absolute;
      top: 50%;
      left: 50%;
      -webkit-transform: translate(-50%, -50%);
      -moz-transform: translate(-50%, -50%);
      -o-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
      }
      @media only screen and (max-width: 1000px)  {
      .log-form {
      width: 100%;
      min-width:700px;
      max-width:800px;
      min-height:700px;
      max-height:800px;
      position: relative;
      margin: 25% auto 0 auto;
      left: 0%;
      -webkit-transform: translate(0%, 0%);
      -moz-transform: translate(0%, 0%);
      -o-transform: translate(0%, 0%);
      -ms-transform: translate(0%, 0%);
      transform: translate(0%, 0%);
      }
      }
      .log-form form {
      display: block;
      width: 100%;
      padding: 2em;
      }
      @media only screen and (max-width: 1000px){.log-form form {
      display: block;
      width: 100%;
      padding-left: 2em;
      padding-right:2em;
      padding-top:10em;
      
      }}@media only screen and (max-width: 1000px){.log-form input {
      display: block;
      margin: auto auto;
      width: 100%;
      margin-bottom: 4em;
      padding-top: 4em;
      border: none;
      border-bottom: 1px solid #eaeaea;
      padding-bottom: 2em;
      color: #757575;
      }
      }
      .log-form h2 {
      color: white;
      font-family: 'open sans condensed';
      font-size: 1.35em;
      display: block;
      background: #2a2a2a;
      width: 100%;
      text-transform: uppercase;
      padding: .75em 1em .75em 1.5em;
      box-shadow: inset 0px 1px 1px rgba(255, 255, 255, 0.05);
      border: 1px solid #1d1d1d;
      margin: 0;
      font-weight: 200;
      }
      .log-form input {
      display: block;
      margin: auto auto;
      width: 100%;
      margin-bottom: 2em;
      padding: .5em 0;
      border: none;
      border-bottom: 2px solid #eaeaea;
      padding-bottom: 1.25em;
      color: #757575;
      }
      .log-form input:focus {
      outline: none;
      }@media only screen and (max-width: 1000px){.log-form input.user{
        font-size:30px;
      }}@media only screen and (max-width: 1000px){.log-form input.pwd{
        font-size:30px;
      }}@media only screen and (max-width: 1000px){.log-form input.sub{
        font-size:30px;
      }}
      .a{
        font-family: 'open sans condensed';
        color:Blue;
      }
      
      
  body
    .log-form
      h2 Login to your account
      form(action='/login', method='post')
        input.user(type='text', title='username', placeholder='username', name='username')
        input.pwd(type='password', title='username', placeholder='password', name='password')
        input.sub(type='submit', value='submit') 
      
        if message
         .a
          p 
          |#{message}
        

        
    // end log form
