doctype html
html
  head
    title page for updating news
  style.
    body {font-family: Arial, Helvetica, sans-serif;}
    h2{
    margin-top:0px;
    color: white;
    text-align: center;
    }
    .main {
    overflow: hidden;
    background-color:#4278b7;
    position:relative;
    width: 98.5%;
    padding-left:10px;
    padding-right:10px;
    max-height:80px;
    }
    input[type=text], select, textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    margin-top: 20px;
    margin-bottom: 30px;
    resize: vertical;
    }
    input[type=submit] {
    border: none;
    border-radius: 4px;
    cursor: pointer;
    background-color: #4278b7;
    color:white;
    padding: 12px 20px;
    font-size: 21px;
    margin-top: 25px;
    }
    input[type="file"] {
    margin-left: 20px;
    font-size:18px;
    }
    input[type=submit]:hover {
    background-color: #4278b7;
    }
    .container {
    border-radius: 5px;
    background-color: #f2f2f2;
    
    padding:10px;
    max-width:98.5%;
    width: 100%;
    }label{
      font-size:25px;
      padding-top:4em;
      padding-bottom:4em;
      margin-bottom:20px;
    }
    i {
    border: solid black;
    border-width: 0 0px 0px 0;
    display: inline-block;
    padding: 12px;
    margin-top: 20px;
    
    }
    a{
    image-color:black;
    }
    .left {
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
    }
    check {
    font-size: 200%;
    
    
    }
  body
    .main
        i.arrow.left
        b
          a(href='/last')
           img(src="/images/arrow.png")
          h2 UPLOAD YOUR NEWS HERE!
    .container
      form(action='/uploadnews' method='post' enctype='multipart/form-data' style='font-size: 20px;')
        label(for='lname') Title
        input#lname(type='text', name='title', placeholder='Enter The Title Of News...', maxlength='100',required, style='font-size:19px')
        //
          <label for="country">Country</label>
          <select id="country" name="country">
          <option value="australia">INDIA</option>
          <option value="canada">UK</option>
          <option value="usa">USA</option>
          </select>
        label(for='subject') Description
        textarea#subject(name='description', placeholder='Write Description...',style="height:200px;font-size:20px",maxlength='500',required)
        label(for='country') Upload Image
        input(type='file', name='pic',required)
        br
        input(type='submit', value='Submit')
